{
    "server": "irc.freenode.net",
    "port": 6667,
    "log": [
        {
            "level": "INFO",
            "file": "/var/log/ircbot/info.log"
        },
        {
            "level": "DEBUG",
            "file": "/var/log/ircbot/debug.log"
        },
        {
            "level": "WARNING",
            "file": "-stdout"
        }
    ],
    "plugins": {
        "init": {
          "path": "./plugins/init/init.so",
          "config": {
            "nick": "KolK_IRCBot",
            "user": "KolK_IRCBot",
            "alternative_nicks": [ "KolK_IRCBot_1", "KolK_IRCBot_2" ],
            "real_name": "IRCBot - KolK",
            "invisible": false,
            "wallops": false
          }
        },
        "ping": {
            "path": "./plugins/ping/ping.so"
        },
        "join": {
            "path": "./plugins/join/join.so",
            "config": {
                "channels": [
                    "#KolK"
                ]
            }
        },
        "clipboard": {
            "path": "./plugins/clipboard/clipboard.so",
            "config": {
                "size": 5,
                "message_size": 20
            }
        },
        "simple": {
            "path": "./plugins/simple_commands/simple_commands.so",
            "config": {}
        }
    ]
}
