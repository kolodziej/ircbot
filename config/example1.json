            "alternative_nicks": [ "KolK_IRCBot_1", "KolK_IRCBot_2" ],
            "real_name": "IRCBot - KolK",
            "invisible": false,
            "wallops": false
          }
        },
        "Ping": {
            "soPath": "./plugins/ping.so"
        },
        "HelloWorld": {
            "soPath": "./plugins/helloworld.so",
            "config": {
              "message": "Hi! I'am hello world plugin!"
            }
        }
